{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "OneMDEditor",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.onemditor",
      "icon": []
    },
    "allowlist": {
      "all": false,
      "fs": {
        "all": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      }
    },
    "windows": [
      {
        "label": "main",
        "title": "OneMDEditor",
        "width": 1200,
        "height": 720
      }
    ]
  }
}
